{
  "name": "react-redux-universal-starter",
  "version": "0.1.0",
  "scripts": {
    "start-prod": "concurrent --kill-others \"npm run start-prod-server\" \"npm run start-prod-api\"",
    "start-prod-server": "better-npm-run start-prod-server",
    "start-prod-api": "better-npm-run start-prod-api",
    "start-dev": "concurrent --kill-others \"npm run start-dev-api\" \"npm run start-dev-server\" \"npm run lint:watch\"",
    "start-dev-server": "better-npm-run start-dev-server",
    "start-dev-api": "better-npm-run start-dev-api",
    "build": "rimraf build && npm run build-client && npm-run-all --parallel build-server build-api",
    "build-client": "webpack -p --config ./tools/webpack.client.prod.js --progress --profile --colors --display-error-details",
    "build-server": "webpack -p --config  ./tools/webpack.server.prod.js --progress --profile --colors --display-error-details",
    "build-api": "webpack -p --config  ./tools/webpack.api.prod.js --progress --profile --colors --display-error-details",
    "lint": "node_modules/.bin/esw webpack.client.dev.* src --color",
    "lint:watch": "npm run lint -- --watch"
  },
  "betterScripts": {
    "start-prod-server": {
      "command": "node build/server.js",
      "env": {
        "NODE_ENV": "production",
        "HOST": "localhost",
        "PORT": 8080
      }
    },
    "start-prod-api": {
      "command": "node build/api.js",
      "env": {
        "NODE_ENV": "production",
        "APIPORT": 3030,
        "APIHOST": "localhost"
      }
    },
    "start-dev-server": {
      "command": "babel-node src/server/index.js",
      "env": {
        "NODE_ENV": "development",
        "HOST": "localhost",
        "PORT": 3000
      }
    },
    "start-dev-api": {
      "command": "babel-node src/api/index.js",
      "env": {
        "NODE_ENV": "development",
        "APIPORT": 3030,
        "APIHOST": "localhost"
      }
    },
    "build": {
      "command": "babel-node src/api/index.js",
      "env": {
        "NODE_ENV": "development",
        "APIPORT": 3030,
        "APIHOST": "localhost"
      }
    }
  },
  "dependencies": {
    "async": "^2.1.4",
    "babel-preset-react-optimize": "^1.0.1",
    "bcrypt-nodejs": "0.0.3",
    "concurrently": "^3.3.0",
    "core-decorators": "^0.15.0",
    "cors": "^2.8.1",
    "dotenv": "^4.0.0",
    "express": "^4.14.0",
    "express-rate-limit": "^2.6.0",
    "extract-text-webpack-plugin": "^2.0.0-rc.2",
    "helmet": "^3.4.0",
    "http-proxy": "^1.16.2",
    "isomorphic-fetch": "^2.2.1",
    "jwt-simple": "^0.5.1",
    "lodash": "^4.17.4",
    "mongodb": "^2.2.22",
    "mongoose": "^4.7.8",
    "morgan": "^1.8.1",
    "node-fetch": "^1.6.3",
    "normalize.css": "^5.0.0",
    "passport": "^0.3.2",
    "passport-jwt": "^2.2.1",
    "passport-local": "^1.0.0",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-helmet": "^4.0.0",
    "react-redux": "^5.0.2",
    "react-router": "^3.0.2",
    "redux": "^3.6.0",
    "serialize-javascript": "^1.3.0",
    "source-map-support": "^0.4.11"
  },
  "devDependencies": {
    "assets-webpack-plugin": "^3.5.1",
    "autoprefixer": "^6.7.0",
    "babel-cli": "^6.22.2",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.10",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-polyfill": "^6.16.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.22.0",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-stage-0": "^6.22.0",
    "body-parser": "^1.16.1",
    "case-sensitive-paths-webpack-plugin": "^1.1.4",
    "compression": "^1.6.2",
    "cross-env": "^3.1.4",
    "css-loader": "^0.26.1",
    "eslint": "^3.14.1",
    "eslint-loader": "^1.6.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-react": "^6.9.0",
    "eslint-watch": "^2.1.14",
    "helmet": "^3.4.0",
    "hpp": "^0.2.1",
    "json-loader": "^0.5.4",
    "node-sass": "^4.4.0",
    "nodemon": "^1.11.0",
    "npm-run-all": "^4.0.1",
    "postcss-loader": "^1.2.2",
    "react-addons-test-utils": "^15.4.2",
    "react-transform-hmr": "^1.0.4",
    "redux-devtools": "^3.3.2",
    "rimraf": "^2.5.4",
    "sass-loader": "^4.1.1",
    "style-loader": "^0.13.1",
    "webpack": "^2.2.1",
    "webpack-dev-middleware": "^1.9.0",
    "webpack-hot-middleware": "^2.15.0",
    "webpack-node-externals": "^1.5.4"
  }
}
